@model FPTBookStore.Models.Author;


<div class="container-fluid col-md-10 text-center" style="padding-left: 500px">
    <table class="table-borderless">
        <tr>
            <th colspan="2" >Author Detail</th>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.FName @Model.LName</td>
        </tr>
        <tr>
            <th>Books</th>
        </tr>
        @foreach (var b in Model.Books)
       {
           <tr>
               <td>Title:
                   <a asp-controller="Category" asp-action="Detail" asp-route-id="@b.AuthorId">
                      @b.Title
                   </a>
               </td>
           </tr>
       }
    </table>
</div>