@model FPTBookStore.Models.Author;

<div class="container col-md-4 text-center ">
    <h1 id="at1">Edit Author Information</h1>
    <br />
     <form class="card p-2 bg-white" action="Edit" method="post">
         <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" asp-for="LName" />
            <span class="text-danger" asp-validation-for="LName"></span>
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" asp-for="FName" />
            <span class="text-danger" asp-validation-for="FName"></span>
        </div>
        <div class="form-group">
            <input class="btn-outline-success" type="submit" value="Edit" />
        </div>
     </form>
</div>