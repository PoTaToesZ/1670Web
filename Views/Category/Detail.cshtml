@model FPTBookStore.Models.Category;

<div class="container-fluid col-md-10 text-center justify-content-center">
    <table class="table-borderless">
        <tr>
            <th colspan="2" >Category Detail</th>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                <img src="@Model.Image" width="150" height="100" />
            </td>
        </tr>
        <tr>
            <th>Books</th>
        </tr>
        @foreach (var b in Model.Books)
        {
            <tr>
                <td>
                    Title:
                    <a asp-controller="Book" asp-action="Detail" asp-route-id="@b.CategoryId">
                        @b.Title 
                    </a>
                </td>
            </tr>
        }
    </table>
</div>